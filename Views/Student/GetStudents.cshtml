@model IEnumerable<StudentViewModel>
@{
    ViewData["Title"] = "List of all students";
    int page = ViewBag.Page;
}

<h1>List of students</h1>


<h5>
    <a asp-action="Add">Create Student</a>
</h5>
<div>
    <form method="get">
        Find By
         <select name="searchBy">
            <option value="Id">Id</option>
            <option value="Name">Name</option>
            <option value="Address">Address</option>
            <option value="Enrollment">Enrollment</option>
        </select>
        <input type="text" placeholder="Filter Name" name="searchString" value="@ViewData["CurrentFilter"]">
        <input type="submit" value="Search" class="btn btn-success">
    </form>
</div>
<table>
    <thead>
        <tr>
            <th>
               <a asp-action="GetStudents" asp-route-sortOrder="@ViewData["Id"]">Id</a>
            </th>
            <th>
                <a asp-action="GetStudents" asp-route-sortOrder="@ViewData["NameSortParm"]">Name</a>
            </th>
            <th>
                <a asp-action="GetStudents" asp-route-sortOrder="@ViewData["AddressSortParm"]">Address</a>
            </th>
            <th>
                <a asp-action="GetStudents" asp-route-sortOrder="@ViewData["EnrollSortParm"]">Enrollment</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Any())
        {
            @foreach(var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Address</td>
                    <td>@student.Enrollment</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@student.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                    </td>
                </tr>
            }

            
        }
        else
        {
            <h6>Don't have any student records.</h6>
        }

    </tbody>
</table>



<div class="center-button">
    <a asp-action="GetStudents" asp-route-page="@(page-1)" class="btn btn-primary">&lt;</a>
    <a asp-action="GetStudents" asp-route-page="@(page)" class="btn btn-success">@(page)</a>
    <a asp-action="GetStudents" asp-route-page="@(page+1)" class="btn btn-primary">&gt;</a>

</div>


