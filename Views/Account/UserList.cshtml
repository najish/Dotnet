@model UserListViewModel

@{
    ViewData["Title"] = "All User";
}

<a asp-action="Register" class="btn btn-primary">Create User</a>
<h1>All User</h1>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
        </tr>
    </thead>

    <tbody>
        @if(Model.List.Any())
        {
            @foreach(var user in Model.List)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a> | 
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-dark">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <div>
                <h6>No user is found</h6>
                <a asp-action= "Register" class="btn btn-primary">Create User</a>
            </div>
        }

    </tbody>
</table>