@model List<IdentityRole>

@{
    ViewData["Title"] = "Roles List";
}

<h1>
    <a asp-action="CreateRole">Create Role</a>
</h1>

<table>
    <thead>
        @if(Model.Any())
        {
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        }
    </thead>
    <tbody>
        @if(Model.Any())
        {
            @foreach(var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        <a asp-action="EditRole" asp-route-id="@role.Id">Edit</a> | 
                        <a asp-action="DeleteRole" asp-route-id="@role.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>